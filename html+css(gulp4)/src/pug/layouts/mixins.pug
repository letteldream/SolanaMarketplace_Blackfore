mixin i(name)
	svg.icon(class='icon-' + name)
		use(xlink:href='#icon-' + name)

mixin theme(classTheme)
	label.theme.js-theme(class=classTheme)
		input.theme__input(type="checkbox")
		span.theme__inner
			span.theme__box

mixin switch(checked)
	label.switch
		if checked
			input.switch__input(type="checkbox" checked)
		else
			input.switch__input(type="checkbox")
		span.switch__inner
			span.switch__box

mixin checkbox(text, checked)
	label.checkbox
		if checked
			input.checkbox__input(type="checkbox" checked)
		else
			input.checkbox__input(type="checkbox")
		span.checkbox__inner
			span.checkbox__tick
			span.checkbox__text=text


mixin card(srcSet, src, title)
	.card
		.card__preview
			img(srcSet=`${srcSet} 2x`
				src=src
				alt="Card preview")
			.card__control
				.status-green.card__category purchasing !
				button.card__favorite
					+i('heart')
				a.button-small.card__button.js-popup-open(href="#popup-bid" data-effect="mfp-zoom-in")
					span Place a bid
					+i('scatter-up')
		a.card__link(href="item.html")
			.card__body
				.card__line 
					.card__title=title  
					.card__price 2.45 ETH
				.card__line
					.card__users
						.card__avatar
							img(src="img/content/avatar-1.jpg" alt="Avatar")
						.card__avatar
							img(src="img/content/avatar-3.jpg" alt="Avatar")
						.card__avatar
							img(src="img/content/avatar-4.jpg" alt="Avatar")
					.card__counter 3 in stock
			.card__foot
				.card__status
					+i('candlesticks-up')
					| Highest bid <span>0.001 ETH</span>
				.card__bid New bid <span role="img" aria-label="fire">ðŸ”¥</span>

mixin subscription(typeInput, name, placeholder)
	form.subscription
		input.subscription__input(type=typeInput name=name placeholder=placeholder required)
		button.subscription__btn
			+i('arrow-next')

